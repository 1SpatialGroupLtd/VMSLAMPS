	SUBROUTINE INIZONE
C
***	MODULE	INIZONE
***	IDENT	17OC89
C
C Copyright Laser Scan Laboratories Ltd., Cambridge, England
C Author Ron Russell					17-Oct-1989
C
C To initialise VM zones
C
	IMPLICIT NONE
C
***	PARAMETER/CMN:ACS/
***	PARAMETER/CMN:CTXS/
***	PARAMETER/CMN:REGPAR/
C
***	COMMON/CMN:ACS/
***	COMMON/CMN:CTXS/
***	COMMON/CMN:DEFINE/
***	COMMON/CMN:REGCMN/
***	COMMON/CMN:SECMAP/
***	COMMON/CMN:VARIABLE/
C
	INCLUDE '($LIBVMDEF)'
C
C functions called
C
	INTEGER		LIB$CREATE_VM_ZONE
C w/s
C
	INTEGER		COND
C
C at the momemt, we only have one zone, that is used for all the 
C things that are (or may be) frequently got and freed
C
C these are: ACS
C            composite texts
C            Region PPTs ( and also bit maps - perhaps they should not be)
C            Lists of POINT attributes
C
	     INTEGER	LOOKASIDE_TOTAL
	     PARAMETER	(LOOKASIDE_TOTAL = 5)	! acs,ctxs,ppts,defs,region-
C						! bitmaps
	     INTEGER	EXTEND_SIZE
	     PARAMETER	(EXTEND_SIZE = 8)	! extend by 8 pages at a time
C
	     CHARACTER*(*) ZONE_NAME
	     PARAMETER	(ZONE_NAME = 
     &	                  'Zone for ACs, CTXs, DEFs, PPTs and regions')
C
	COND = LIB$CREATE_VM_ZONE(REG_ZONE,
     &	                          LIB$K_VM_FREQ_SIZES,	! algorithm
     &	                          LOOKASIDE_TOTAL,
     &	                          ,			! flags
     &	                          EXTEND_SIZE,		! extend size
     &	                          0,			! initial size
     &	                          8,			! block size
     &	                          4,			! alignment
     &	                          0,			! page limit
     &	                          ,			! smallest block size
     &	                          ZONE_NAME		! zone name
     &	                          )			! number of areas,
							! get page routine,
							! free page routine
	IF (.NOT.COND) THEN
	   CALL LITES2_SIGNAL(COND)
	ELSE
	   AC_ZONE  = REG_ZONE
	   CTX_ZONE = REG_ZONE
	   DEF_ZONE = REG_ZONE
	ENDIF
C
	RETURN
	END
