	SUBROUTINE DRWGRD
C
***	IDENT	22MY89
***	MODULE	DRWGRD
C
C	Copyright Laser-Scan Laboratories Ltd., Cambridge, England.
C
C	Written					RWR	17-Apr-1985
C
C Description
C
C	LITES2 cartographic editor DRAW GRID command.
C
	IMPLICIT NONE
C
***	PARAMETER/CMN:ACS/		! for LABELS
C
***	COMMON/CMN:DRAWIN/
***	COMMON/LSL$CMNFRT:FRTACD/
***	COMMON/CMN:LABELS/
***     COMMON/CMN:MASTER/
***	COMMON/CMN:RFCTRL/
C
C Local Variables
C
	INTEGER		I		! loop counter
	REAL		XIN(2),YIN(2)
	INTEGER		Z(2)
C
	IF (NODISP) GOTO 999		! no display to draw on
C
	CALL SETANNO(.TRUE.)		! set attributes
C
	Z(1) = CSZI
	Z(2) = CSZI
C
C draw vertical lines
C
	YIN(1)=LIMITS(3)
	YIN(2)=LIMITS(4)
	DO 10, I=0,YRANGE
	   XIN(1)=XOFF+I*XSECTW
	   XIN(2)=XIN(1)
	   CALL SRIGPL(2,XIN,YIN,Z)
   10	CONTINUE
C
C draw horizontal lines
C
	XIN(1)=LIMITS(1)
	XIN(2)=LIMITS(2)
	DO 20, I=0,XRANGE
	   YIN(1)=YOFF+I*YSECTW
	   YIN(2)=YIN(1)
	   CALL SRIGPL(2,XIN,YIN,Z)
   20	CONTINUE
C
	OCSXY(1) = CSXY(1)+1.0		! force refresh re-draw
C
	CALL SETANNO(.FALSE.)		! cancel attributes
C
999	RETURN
	END
