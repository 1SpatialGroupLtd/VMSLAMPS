C
	IMPLICIT NONE
C
C Included Parameter Files
C
***     PARAMETER/CMN:EFNLUN/		! LITES2 logical units
C
C Common Blocks
C
***     COMMON/CMN:DIN/			! command decoding input
C
C Assign function value
C
	RSPINP = (DTOP .GT. DSAV)
C
C Return
C
	RETURN
	END
