	REAL*4 FUNCTION SECDIST(S)
C
***	IDENT	14AU92
***	MODULE	SECDIST
C
C	Copyright Laser-Scan Laboratories Ltd., Cambridge, England.
C
C	Created					CCB	14-Aug-1992
C
C	Get distance of sector to point CONTXY
C
	IMPLICIT NONE
C
	INCLUDE	'LSL$CMNIFF:CB.STR'
***	PARAMETER/CMN:AUXDEF/
***	PARAMETER/CMN:PACK/
***	COMMON/CMN:MASTER/
***	COMMON/CMN:STRIKE/
C
C Argument
	INTEGER		S	! sector number
C
C Local Variables
	INTEGER		CX,CY,SX,SY
	REAL		DX,DY
C
C get sector number which point CONTXY is in
	CX = (CONTXY(1)-XOFF)/XSECTW
	CY = (CONTXY(2)-YOFF)/YSECTW
C
C break the sector number into components
	SY = (S-1)/YRANGE
	SX = S-1 - SY*YRANGE
C
	IF (SX.EQ.CX) THEN
	   DX = 0.0
	ELSE
	   IF (SX.LT.CX) SX = SX+1
	   DX = CONTXY(1) - (SX*XSECTW + XOFF)
	ENDIF
C
	IF (SY.EQ.CY) THEN
	   DY = 0.0
	ELSE
	   IF (SY.LT.CY) SY = SY+1
	   DY = CONTXY(2) - (SY*YSECTW + YOFF)
	ENDIF
C
	SECDIST = DX**2 + DY**2
	RETURN
	END
