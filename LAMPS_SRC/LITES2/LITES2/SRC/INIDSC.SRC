	SUBROUTINE INIDSC(DESC)
C
***	MODULE	INIDSC
***	IDENT	26JA86
C
C Copyright Laser Scan Laboratories Ltd., Cambridge, England.
C Author: Clarke Brunt
C
C To initialise a dynamic string descriptor
C
	IMPLICIT NONE
C
	INCLUDE	'($DSCDEF)'
C
C arguments
	INTEGER*4	DESC(2)			! descriptor
C
C workspace
	BYTE		B(4)
	INTEGER*4	L
	EQUIVALENCE	(B,L)
	DATA		B/0,0,0,DSC$K_CLASS_D/
C
	DESC(1) = L
	DESC(2) = 0
C
	RETURN
	END
