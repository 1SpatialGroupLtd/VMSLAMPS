! SITEINIT.LCM - LITES2 terminal-independent initialisation file
! see also individual terminal-specific files eg TTA6.LCM
! this version is standard example suitable for OS large scale basemaps
!
enable height		! text heights from IFF file, not FRT file
enable psize		! in point sizes
enable learner		! extra messages
disable now		! status line so no "Now in ..." messages
fiducial layer 0,11	! grid in layer 11 sometimes
verify text
frt OS
sri OS
tri OS
