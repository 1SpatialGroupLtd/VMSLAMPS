	SUBROUTINE UPPERCASE(STR)
C
***	IDENT	25NO85
***	MODULE	UPPERCASE
C
C	Copyright : Laser-Scan Laboratories Ltd., Cambridge, England
C	Created   : ACM					Nov 1985
C
	IMPLICIT NONE
C
C parameters in/out
	CHARACTER*(*)	STR			! a character string
C
C workspace
	INTEGER		I,J
C
CCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCC
C
C	Forces all characters in STR into uppercase
C
CCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCC
C
	DO 10 I = 1,LEN(STR)
	  J = ICHAR(STR(I:I))
	  IF (J.GE.97.AND.J.LE.122) STR(I:I) = CHAR(J-32)
10	CONTINUE
C
	END
