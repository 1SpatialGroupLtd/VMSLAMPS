	SUBROUTINE RESTORE_EXPC( BUFFER, BUFPTR, BUFMAX )
C
***	IDENT	08JA86
***	MODULE	RESTORE_EXPC
C
C	Copyright LaserScan Laboratories Ltd., Cambridge, England
C
C Author TJ Ibbs, 7 Feb 1985
C
C To restore the output line (EXPBUF) from the given buffer
C
	IMPLICIT NONE
C
***	COMMON/LSL$CMNLSL:EXPC/
C
C we were passed
C
	INTEGER*2	BUFPTR
	INTEGER*2	BUFMAX
	BYTE		BUFFER(BUFMAX)
C
C and also need
C
	INTEGER		I		! do loop
	INTEGER		LIMIT		! limit for loop
C
C so copy things - only restore up to BUFMAX characters
C
	IF ( BUFPTR.GT.0 ) THEN
	   LIMIT = MIN( BUFPTR,BUFMAX )
	   DO 10 I = 1,LIMIT
	      EXPBUF( I ) = BUFFER( I )
10	   CONTINUE
	ENDIF
	EXPLEN = BUFPTR
C
	RETURN
	END
