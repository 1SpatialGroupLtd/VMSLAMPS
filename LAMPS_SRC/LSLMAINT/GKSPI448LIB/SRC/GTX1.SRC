	SUBROUTINE	GSCHUP(CUX,CUY)
C
**	MODULE	GSCHUP
**	IDENT	26AP84
C
C Copyright Laser-Scan Laboratories Ltd., Cambridge, England.
C
C Created				Clarke Brunt	26-April-1984
C
C SET CHARACTER UP VECTOR
C
	IMPLICIT NONE
C
C Arguments:
	REAL	CUX,CUY			! vector (w.c.)
C
***	COMMON/GKSDAT1/
***	COMMON/GKSESL/
C
	REAL	HX,HY
	INTEGER	BASE(2),UP(2)
C
	GKSERR = 0
	CALL GW2D(1,CUX,CUY,HX,HY)
	IF (HX.EQ.0.0.AND.HY.EQ.0.0) GOTO 10
	UP(1) = HX*FAC
	UP(2) = HY*FAC
	BASE(1) = UP(2)
	BASE(2) = -UP(1)
	CALL CSCHOR(BASE,UP)
	GOTO 999
C
10	GKSERR = 74			! vector length is 0.0
999	RETURN
	END
