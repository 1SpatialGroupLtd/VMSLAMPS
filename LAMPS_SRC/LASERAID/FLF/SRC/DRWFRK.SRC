	SUBROUTINE DRWFRK
C
***	MODULE	DRWFRK
***	IDENT	06SE85
C
C Copyright Laser-Scan Laboratories Limited, Cambridge, England.
C
CMOD	Colour added				 DM	06-Sep-1985
CMOD	Tidied					AJW	12-Feb-1981
C	Created					MCF	19-Jul-1977
C
C To draw the various fork points on the TX
C
**	IF VAX
	IMPLICIT NONE
**	ENDC
C
***	PARAMETER/PARAMS/
C
C common blocks:
***	COMMON/RSE/
***	COMMON/LINKS/
***	COMMON/FORKS/
C
C workspace:
	INTEGER   N(0:3)	! some pointers
	INTEGER   I,J,K
	INTEGER   IX,IY
C
C ......................................................................
C
	CALL TXCOL(6)
	DO 50 I=1,MAXFRK
	   GOTO (50,10,20),1+FRKTYP(I)
	   GOTO 50
C
C divergence
10	   N(1) = LAST (FORK(1,I))
	   N(2) = FIRST(FORK(2,I))
	   N(3) = FIRST(FORK(3,I))
	   GOTO 30
C
C convergence
20	   N(1) = FIRST(FORK(1,I))
	   N(2) = LAST (FORK(2,I))
	   N(3) = LAST (FORK(3,I))
C
30	   N(0) = N(3)
	   DO 40 J=0,3
	      K = NODE(N(J))
	      IX = ENCBUF(X,K)
	      IY = ENCBUF(Y,K)
	      IF (J .EQ. 0) CALL TXMTO(IX,IY)
	      IF (J .NE. 0) CALL TXLTO(IX,IY)
40	   CONTINUE
50	CONTINUE
C
	CALL TXCOL(1)
	CALL TXEND
	RETURN
	END
