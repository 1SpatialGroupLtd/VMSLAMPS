	LOGICAL*4 FUNCTION NEBIT(NELO,NEHI)
C
***	MODULE	NEBIT
***	IDENT	03NO82
C
**	IF VAX
	  IMPLICIT NONE
**	ENDC
C
C Copyright Laser-Scan Laboratories Ltd,Cambridge,England
C
C	Tidied					AJW	20-Jul-1981
C	Author					MCF
C
C To return stuff from /RSE/ as it is received, shifting the
C points by -RSEOFF()
C Setting RETRY in /RSE/ makes this routine start at
C the beginning of the buffer.
C NEGOT (which should =-NEOLD after a SCANBY) is used
C to remember what has happened.
C
C parameters:
***	PARAMETER/PARAMS/
C
C common block:
***	COMMON/RSE/
C
C workspace:
	INTEGER I,J
	INTEGER NELO,NEHI
C
C function:
	INTEGER NEGET
C
C code:
	IF (NEGOT .GT. 0) GOTO 40
	IF (NESIZE+NEGOT .LE. 0) GOTO 30 	! buffer full
	INE = NEGET(ENCBUF(W,1-NEGOT),NESIZE+NEGOT)
	IF (INE .LE. 0) GOTO 30
	NELO = 1-NEGOT
	NEHI = NELO-1+INE
	DO 20 I=1,2
	  IF (RSEOFF(I).EQ.0) GO TO 20
	  DO 10 J=NELO,NEHI
	    ENCBUF(I,J) = ENCBUF(I,J)-RSEOFF(I)
10	    CONTINUE
20	  CONTINUE
	NEGOT = -NEHI
	NEBIT = .TRUE.
	GOTO 60
C
30	NEGOT = -NEGOT
	NEBIT = .FALSE.
	GOTO 60
C
40	IF (RETRY) GOTO 50
C
	NEBIT = .FALSE.
	GOTO 60
C
50	NELO = NEOLD+1
	NEHI = NEGOT
	NEBIT = .TRUE.
C
60	RETRY = .FALSE.
	RETURN
	END
