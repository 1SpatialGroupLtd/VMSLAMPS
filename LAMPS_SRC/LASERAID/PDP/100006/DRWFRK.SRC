	SUBROUTINE DRWFRK
C
C Copyright Laser-Scan Laboratories Ltd,Cambridge,England
C
C Author M.C.Fulford
C
C	Created 19.vii.77
C	Last edited 11/v/78
C
C To draw the various fork points on the TX
C
***	COMMON/PARAMS/
C
***	COMMON/RSE/
***	COMMON/LINKS/
***	COMMON/FORKS/
C
	INTEGER N(0:3)	! some pointers
C
	DO 300 I=1,MAXFRK
	GOTO (300,100,150),1+FRKTYP(I)
	GOTO 300
C divergence
100	N(1) = LAST (FORK(1,I))
	N(2) = FIRST(FORK(2,I))
	N(3) = FIRST(FORK(3,I))
	GOTO 200
C convergence
150	N(1) = FIRST(FORK(1,I))
	N(2) = LAST (FORK(2,I))
	N(3) = LAST (FORK(3,I))
C
200	N(0) = N(3)
	DO 240 J=0,3
	  K = NODE(N(J))
	  IX = NEBUF(X+1,K)
	  IY = NEBUF(Y+1,K)
	  IF (J .EQ. 0) CALL TXMTO(IX,IY)
	  IF (J .NE. 0) CALL TXLTO(IX,IY)
240	  CONTINUE
C
300	CONTINUE
C
	CALL TXEND
	RETURN
	END
