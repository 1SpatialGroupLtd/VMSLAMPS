	SUBROUTINE FAX(SLAVE,NWID,NPIT)
	LOGICAL*1 SLAVE
	INTEGER NWID,NPIT
C
C Copyright Laser-Scan Laboratories Ltd,Cambridge,England
C
C Author M.C.Fulford
C	Last edited 31/v/79
C
C DRAWS ON THE TX A FACSIMILE OF THE AREA AROUND THE
C  CURSOR, USING EDGDMP
C
C MUST TAKE CARE NOT TO UPSET TRACK FOLLOWING
C
***	COMMON/SCPARM/
***	COMMON/SCCORR/
C
	INTEGER ID(2)
C
C SET UP FOR DRAWING ON TX
	CALL RDABO
	CALL TXCLR
C
	CALL CSRD(XC,YC)
	CALL DISMOD(0)
	SCTX = 680.0/(NWID*WAR*CRX)
	CALL TXSCLE(SCTX)
	CALL TXORGN(500,370)
C REMEMBER VARIOUS PARAMETERS
	IMODSV = IMOD
	IDIRSV = IDIR
	IWIDSV = IWID
	IPITSV = IPIT
C Set up for scans in line mode
	IMOD = 1
	IWID = NWID
	IPIT = NPIT
C PERFORM TWO SCANS, ONE IN EACH DIRECTION
	DO 200 I=1,2
	   ID(I) = IWID*WAR*CR(3-I)
	   ID(3-I) = 0
	   IDIR = 0
	   IF (IABS(ID(2)).LT.IABS(ID(1))) IDIR = 1
	   XS = XC-ID(1)/2
	   YS = YC-ID(2)/2
	   CALL MOVTO(XS,YS)
	   CALL SCANBY(ID(1),ID(2),1)
	   CALL EDGDMP(ID)
	   CALL SCSET(0)
200	   CONTINUE
C RESTORE STATE
	IMOD = IMODSV
	IDIR = IDIRSV
	IWID = IWIDSV
	IPIT = IPITSV
C
	IF (.NOT. SLAVE) GOTO 250
	CALL TXCUR
	CALL TXLOC(ICH,ICX,ICY)
	CALL CSWT(XC+ICX,YC+ICY)
C
250	CALL TXORGN(0,0)
	CALL TXSCLE(1.0)
	CALL TXMTO(0,600)
	CALL TXEND
	RETURN
C
	END
