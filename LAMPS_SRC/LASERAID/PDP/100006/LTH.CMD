.DISABLE DATA
	.CLOSE
	TKB @[100,6]LTH.TKB
	LMP [100,1]LTH.MAP
	.IFINS LTH... REM LTH...
	.IFNINS LTH... INS [100,1]LTH
.;
.300:	PIP [100,1]LTH.*,[100,5]LTH.*,[100,6]LTH.*/PU
	TIME
	SET /UIC=[100,6]
