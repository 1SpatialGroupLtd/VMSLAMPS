	SUBROUTINE DTHFIT(MBUF,IB,IT,IX,IY,COSTH,SINTH,D)
C
C Copyright Laser-Scan Laboratories Ltd,Cambridge,England
C
C Author M.C.Fulford
C
C	Created 4.vii.77
C	Last edited 6/vii/77
C
C Fits X cos THETA + Y sin THETA = D  to the
C set of ppoints in MBUF.
C
	INTEGER MBUF(3,1)
	REAL COSTH,SINTH,D
	INTEGER IB,IT,IX,IY
C
	REAL S1,SX,SY,SXX,SXY,SYY
	REAL SXXP,SXYP,SYYP
C Get totals
	SX = 0.
	SY = 0.
	SXX = 0.
	SXY = 0.
	SYY = 0.
	S1  = IT-IB+1
	DO 200 I = IB,IT
	  RX = MBUF(IX,I)
	  RY = MBUF(IY,I)
	  SX = SX+RX
	  SY = SY+RY
	  SXX = SXX+RX*RX
	  SXY = SXY+RX*RY
	  SYY = SYY+RY*RY
200	  CONTINUE
C
	SXXP = SXX - SX*SX/S1 
	SXYP = SXY - SX*SY/S1
	SYYP = SYY - SY*SY/S1
C
	Ced at all chai
