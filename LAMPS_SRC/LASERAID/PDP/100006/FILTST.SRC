	REAL PTS(2,100)
	INTEGER NPTS
C
	CALL LDINIT("177)
5	NPTS = 0
10	CALL DISMOD(1)
	IF (NPTS.GT.0) GOTO 20
	CALL CURSOR
	GOTO 100

20	CALL MOVTO(PTS(1,1),PTS(2,1))
	IF (NPTS.LT.2) GOTO 40
	DO 30 I = 2,NPTS
	CALL LINTO(PTS(1,I),PTS(2,I))
30	CONTINUE
40	CALL LINTOC
C
100	CALL REFRSH
	CALL FBRD(IFB)
	IF (IFB .EQ.16) CALL EXIT
	GOTO (110,120,5),IFB
	GOTO 100
C
110	NPTS = NPTS+1
	CALL CSRD(PTS(1,NPTS),PTS(2,NPTS))
	GOTO 10
C
120	CALL DISMOD(0)
	CALL THICK(0.0)
	CALL MOVTO(PTS(1,1),PTS(2,1))
	DO 122 I = 2,NPTS
	CALL LINTO(PTS(1,I),PTS(2,I))
122	CONTINUE
	CALL ARFILL(PTS, NPTS, 0.05)
	CALL THICK(0.0)
	GOTO 5
	END
