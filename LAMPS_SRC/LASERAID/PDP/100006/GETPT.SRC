	LOGICAL FUNCTION GETPT(PX,PY,TEXT)
C
C Copyright Laser-Scan Laboratories Ltd,Cambridge,England
C
C Author M.C.Fulford
C
C Common block /NULLC/ removed AJW 1-Aug-1980
C	Last edited 1/Aug/80
C
C	To issue a prompt, read the cursor when FB4 or FB16
C	pressed. Result is "FB16 pressed"
C
C arguments:
	REAL PX,PY
	BYTE TEXT(1)
C common blocks:
C none
C functions:
	INTEGER RDCOMM
C w/s:
C Command table:
	EXTERNAL NULLCM
C
	INTEGER CWD
C
	GETPT = .TRUE.
	CALL DISMOD(1)
	CALL FBWT16("100010)
	CALL CURSOR
	CALL CHARS(TEXT(1))
C
10	DCPTR = -1
	TXTPTR = -2
	CWD = RDCOMM(NULLCM)
	IF (CWD .EQ. 4) GOTO 20
	IF (CWD .EQ.16) GOTO 30
	GOTO 10
C FB4:
20	GETPT = .FALSE.
C FB16 joins
30	CALL CSRD(PX,PY)
	RETURN
	END
