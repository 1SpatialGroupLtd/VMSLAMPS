	INTEGER*4 FUNCTION FLN_CHANGE_JOB_PRI
     &	(JOB_ID,PRIORITY)
C
***	MODULE	FLN_CHANGE_JOB_PRI
***	IDENT	27AP88
C
C Copyright Laser-Scan Laboratories Ltd., Cambridge, England
C
C Author M.W.S. Reid
C
C 	Created					MWSR    19-May-1988
C
C changes the priority of  JOB
C
	IMPLICIT NONE
C
C Parameters
	INCLUDE	'LSL$CMNFLOWLINE:FLOW.PAR'
	INCLUDE	'LSL$CMNFLOWLINE:FLOWLINEMSG.PAR'
C
C Arguments
	INTEGER*4	JOB_ID		! IN - JOB id
	INTEGER*4	PRIORITY	! IN - JOB priority
C Common Blocks
C
C RDB return codes
	INTEGER*4	RDB$_DEADLOCK
	EXTERNAL	RDB$_DEADLOCK
	INTEGER*4	RDB$_NO_DUP
	EXTERNAL	RDB$_NO_DUP
C

	INTEGER*4	NUM_ERR
	INTEGER*4	NUM_JOB
C 
&RDB&	DATABASE FILENAME 'LSL$FLN_DATABASE:FLOWLINE'
C
C validate priority
	IF (PRIORITY .LT. 1 .OR. PRIORITY .GT. 16) THEN
	    FLN_CHANGE_JOB_PRI= FLN__ILLEGPRI
	    GOTO 999
	ENDIF
C
	NUM_ERR = 0
20	CONTINUE
	NUM_JOB=0
C	
&RDB&   START_TRANSACTION READ_WRITE WAIT RESERVING JOB FOR 
&RDB&   PROTECTED WRITE
&RDB&	ON ERROR
	   NUM_ERR = NUM_ERR+1
	   IF (NUM_ERR .GT. 5) THEN
	      FLN_CHANGE_JOB_PRI = RDB$STATUS
	      GOTO 999
	   ENDIF
C
C try again - probably deadlock
	   CALL LIB$WAIT(FLN_PSE)
	   GOTO 20
&RDB&	END_ERROR
C
C retrieve the system command file

C create the JOB
&RDB&   FOR J IN JOB WITH J.JOB_ID  = JOB_ID
&RDB&	   ON ERROR
	      NUM_ERR = NUM_ERR+1
	      IF (NUM_ERR .GT. 5) THEN
	         FLN_CHANGE_JOB_PRI = RDB$STATUS
&RDB&            ROLLBACK
	         GOTO 999
	      ENDIF
C
C try again - probably deadlock
&RDB&         ROLLBACK
	      CALL LIB$WAIT(FLN_PSE)
	      GOTO 20
&RDB&	   END_ERROR
	   NUM_JOB = NUM_JOB+1
&RDB&      MODIFY J USING 
&RDB&	      ON ERROR
	         NUM_ERR = NUM_ERR+1
	         IF (NUM_ERR .GT. 5) THEN
	            FLN_CHANGE_JOB_PRI = RDB$STATUS
&RDB&               ROLLBACK
	            GOTO 999
	         ENDIF
C
C try again - probably deadlock
&RDB&            ROLLBACK
	         CALL LIB$WAIT(FLN_PSE)
	         GOTO 20
&RDB&	      END_ERROR
&RDB&         J.PRIORITY = PRIORITY;
&RDB&      END_MODIFY
C
&RDB&   END_FOR
&RDB&   COMMIT
C
	IF (NUM_JOB .EQ. 0) THEN
	   FLN_CHANGE_JOB_PRI = FLN__NOSUCHJOB
	ELSE	
	  FLN_CHANGE_JOB_PRI = RDB$STATUS
	ENDIF
C
999	RETURN
	END
