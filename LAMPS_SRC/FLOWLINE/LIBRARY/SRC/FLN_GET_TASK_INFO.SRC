	INTEGER*4 FUNCTION FLN_GET_TASK_INFO(TASK_ID,FLN_ID
     &            ,ELMNT_ID,JOB_ID)
C
***	MODULE	FLN_GET_TASK_INFO
***	IDENT	26AP88
C
C Copyright Laser-Scan Laboratories Ltd., Cambridge, England
C
C Author M.W.S. Reid
C
C 	Created					MWSR    25-Feb-1988
C
C gets flowline and job given a task
C returns SS$NORMAL if all is well
C
	IMPLICIT NONE
C
C Parameters
	INCLUDE	'LSL$CMNFLOWLINE:FLOW.PAR'
	INCLUDE	'LSL$CMNFLOWLINE:FLOWLINEMSG.PAR'
C
C Arguments
	INTEGER*4	TASK_ID		!IN - task identifier
	CHARACTER*20    FLN_ID		!OUT - 
	CHARACTER*20	ELMNT_ID	!OUT
	INTEGER*4	JOB_ID		!OUT
C
C RDB return codes
	INTEGER*4	RDB$_DEADLOCK
	EXTERNAL	RDB$_DEADLOCK
C
C
C Local Variables
	INTEGER*4	NUM_TASK
	INTEGER*4	NUM_ERR
C
&RDB&   DATABASE FILENAME  'LSL$FLN_DATABASE:FLOWLINE'
C
	NUM_ERR = 0
20	CONTINUE
	NUM_TASK = 0
&RDB&   START_TRANSACTION READ_ONLY WAIT RESERVING TASK,JOB FOR
&RDB&   SHARED READ
&RDB&	ON ERROR
	   NUM_ERR = NUM_ERR+1
	   IF (NUM_ERR .GT. 5) THEN
	      FLN_GET_TASK_INFO = RDB$STATUS
	      GOTO 999
	   ENDIF
C
C try again - probably deadlock
	   CALL LIB$WAIT(FLN_PSE)
	   GOTO 20
&RDB&	END_ERROR
&RDB&   FOR T IN TASK WITH T.TASK_ID = TASK_ID 
&RDB&	   ON ERROR
	      NUM_ERR = NUM_ERR+1
	      IF (NUM_ERR .GT. 10) THEN
		 FLN_GET_TASK_INFO = RDB$STATUS
&RDB&	         ROLLBACK
		 GOTO 999
	      ENDIF
&RDB&	      ROLLBACK
C
C only possible error is deadlock 
	      CALL LIB$WAIT(FLN_PSE)
	      GOTO 20
&RDB&	   END_ERROR
	   NUM_TASK  = NUM_TASK+1
&RDB&       GET 
&RDB&	      ON ERROR
	         NUM_ERR = NUM_ERR+1
	         IF (NUM_ERR .GT. 5) THEN
		    FLN_GET_TASK_INFO = RDB$STATUS
&RDB&	            ROLLBACK
		    GOTO 999
	         ENDIF
&RDB&	         ROLLBACK
C
C only possible error is deadlock 
	         CALL LIB$WAIT(FLN_PSE)
	         GOTO 20
&RDB&	      END_ERROR
&RDB&         ELMNT_ID = T.ELEMENT_ID;
&RDB&         JOB_ID   = T.JOB_ID;
&RDB&       END_GET
&RDB&   END_FOR
C
C
C get the flowline from the job relation
C
30	CONTINUE
&RDB&   FOR J IN JOB WITH J.JOB_ID = JOB_ID
&RDB&	      ON ERROR
	         NUM_ERR = NUM_ERR+1
	         IF (NUM_ERR .GT. 5) THEN
		    FLN_GET_TASK_INFO = RDB$STATUS
&RDB&	            ROLLBACK
		    GOTO 999
	         ENDIF
&RDB&	         ROLLBACK
C
C only possible error is deadlock 
	         CALL LIB$WAIT(FLN_PSE)
	         GOTO 20
&RDB&	      END_ERROR
&RDB&      GET
&RDB&	      ON ERROR
	         NUM_ERR = NUM_ERR+1
	         IF (NUM_ERR .GT. 10) THEN
		    FLN_GET_TASK_INFO = RDB$STATUS
&RDB&	            ROLLBACK
		    GOTO 999
	         ENDIF
&RDB&	         ROLLBACK
C
C only possible error is deadlock 
	         CALL LIB$WAIT(FLN_PSE)
	         GOTO 20
&RDB&	      END_ERROR
&RDB&      FLN_ID = J.FLOWLINE_ID
&RDB&      END_GET
&RDB&   END_FOR
&RDB&   COMMIT
C
C process the outcome
	IF (NUM_TASK .EQ. 0) THEN
	   FLN_GET_TASK_INFO = FLN__NOSUCHTASK
	ELSE
	   FLN_GET_TASK_INFO = RDB$STATUS
	ENDIF
C
999	RETURN
	END
