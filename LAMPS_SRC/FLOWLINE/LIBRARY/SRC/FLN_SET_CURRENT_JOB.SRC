	INTEGER*4 FUNCTION FLN_SET_CURRENT_JOB(OPERATOR_ID,JOB_ID)
C
***	MODULE	FLN_SET_CURRENT_JOB
***	IDENT	12MY88
C
C Copyright Laser-Scan Laboratories Ltd., Cambridge, England
C
C Author M.W.S. Reid
C
C 	Created					MWSR    06-May-1988
C
C sets up current JOB for operator 
C
	IMPLICIT NONE
C
C Parameters
	INCLUDE	'LSL$CMNFLOWLINE:FLOW.PAR'
	INCLUDE	'LSL$CMNFLOWLINE:FLOWLINEMSG.PAR'
C
C Arguments
	INTEGER*4	JOB_ID		!IN - JOB identifier
	CHARACTER*(*)	OPERATOR_ID     !IN - operator id
C
C Local Variables
	INTEGER*4	NUM_ERR
	INTEGER*4	NUM_JOB
	CHARACTER*20	ELEMENT_ID
C
&RDB&   DATABASE FILENAME  'LSL$FLN_DATABASE:FLOWLINE'
C
	NUM_ERR = 0 
20	CONTINUE
C
&RDB&   START_TRANSACTION READ_WRITE WAIT RESERVING OPERATOR
&RDB&   FOR PROTECTED WRITE, JOB FOR SHARED READ
&RDB&	ON ERROR
	   NUM_ERR = NUM_ERR+1
	   IF (NUM_ERR .GT. 5) THEN
	      FLN_SET_CURRENT_JOB = RDB$STATUS
	      GOTO 999
	   ENDIF
C
C try again - probably deadlock
	   CALL LIB$WAIT(FLN_PSE)
	   GOTO 20
&RDB&	END_ERROR
C
C store the info
&RDB&   FOR O IN OPERATOR WITH O.OPERATOR_ID  = OPERATOR_ID
&RDB&	   ON ERROR
	      NUM_ERR = NUM_ERR+1
	      IF (NUM_ERR .GT. 5) THEN
	         FLN_SET_CURRENT_JOB = RDB$STATUS
&RDB&            ROLLBACK
	         GOTO 999
	      ENDIF
C
C try again - probably deadlock
&RDB&         ROLLBACK
	      CALL LIB$WAIT(FLN_PSE)
	     GOTO 20
&RDB&	   END_ERROR
&RDB&      MODIFY O USING
C
&RDB&	      ON ERROR
	         NUM_ERR = NUM_ERR+1
	         IF (NUM_ERR .GT. 5) THEN
	            FLN_SET_CURRENT_JOB = RDB$STATUS
&RDB&               ROLLBACK
	            GOTO 999
	         ENDIF
C
C try again - probably deadlock
&RDB&            ROLLBACK
	         CALL LIB$WAIT(FLN_PSE)
	         GOTO 20
&RDB&	      END_ERROR
&RDB&         O.CURRENT_JOB= JOB_ID;
&RDB&       END_MODIFY
&RDB&   END_FOR
&RDB&   COMMIT
C
	FLN_SET_CURRENT_JOB = RDB$STATUS
C
999	RETURN
	END
C
