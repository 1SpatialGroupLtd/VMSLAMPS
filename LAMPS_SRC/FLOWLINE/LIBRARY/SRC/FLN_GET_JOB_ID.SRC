	INTEGER*4 FUNCTION FLN_GET_JOB_ID(JOBID)
C
***	MODULE	FLN_GET_JOB_ID
***	IDENT	05MY88
C
C Copyright Laser-Scan Laboratories Ltd., Cambridge, England
C
C Author M.W.S. Reid
C
C 	Created					MWSR    25-Feb-1988
C
C gets a unique JOB identifier from the database 
C
	IMPLICIT NONE
C
C Parameters
	INCLUDE	'LSL$CMNFLOWLINE:FLOW.PAR'
C
C Arguments
	INTEGER*4	JOBID		! the id number
C
C RDB return codes
	INTEGER*4	RDB$_DEADLOCK
	EXTERNAL	RDB$_DEADLOCK
C Local Variables
	INTEGER*4	NUM_ERR
C
&RDB&	DATABASE FILENAME 'LSL$FLN_DATABASE:FLOWLINE'
C
C the JOBID relation only holds one value - the latest id number
	NUM_ERR = 0
20	CONTINUE
&RDB&   START_TRANSACTION READ_WRITE RESERVING JOBID FOR PROTECTED
&RDB&   WRITE WAIT
&RDB&	ON ERROR
	   NUM_ERR = NUM_ERR+1
	   IF (NUM_ERR .GT. 5) THEN
	      FLN_GET_JOB_ID = RDB$STATUS
	      GOTO 999
	   ENDIF
C
C try again - probably deadlock
	   CALL LIB$WAIT(FLN_PSE)
	   GOTO 20
&RDB&	END_ERROR
&RDB&   FOR J IN JOBID 
&RDB&	ON ERROR
	   NUM_ERR = NUM_ERR+1
	   IF (NUM_ERR .GT. 5) THEN
	      FLN_GET_JOB_ID= RDB$STATUS
&RDB&	      ROLLBACK
	      GOTO 999
	   ENDIF
C
C try again - probably deadlock
&RDB&	      ROLLBACK
	   CALL LIB$WAIT(FLN_PSE)
	   GOTO 20
&RDB&	END_ERROR
&RDB&	   GET 
&RDB&	      ON ERROR
	         NUM_ERR = NUM_ERR+1
	         IF (NUM_ERR .GT. 5) THEN
	            FLN_GET_JOB_ID= RDB$STATUS
&RDB&	            ROLLBACK
	            GOTO 999
	         ENDIF
C
C try again - probably deadlock
&RDB&	         ROLLBACK
	         CALL LIB$WAIT(FLN_PSE)
	         GOTO 20
&RDB&	      END_ERROR
&RDB&         JOBID = J.ID;
&RDB&      END_GET
C
C increment the JOB number
	   IF (JOBID .LE. 0) JOBID = 0
	   JOBID = JOBID +1	
C
C and put it back in the database
&RDB&      MODIFY J USING
C if its a deadlock then retry after waiting
&RDB&	      ON ERROR
	         NUM_ERR = NUM_ERR+1
	         IF (NUM_ERR .GT. 5) THEN
	            FLN_GET_JOB_ID= RDB$STATUS
&RDB&	            ROLLBACK
	            GOTO 999
	         ENDIF
C
C try again - probably deadlock
&RDB&	         ROLLBACK
	         CALL LIB$WAIT(FLN_PSE)
	         GOTO 20
&RDB&	      END_ERROR
&RDB&         J.ID = JOBID;
&RDB&      END_MODIFY
&RDB&   END_FOR
&RDB&   COMMIT
C
	FLN_GET_JOB_ID = RDB$STATUS
C
999	RETURN
	END
