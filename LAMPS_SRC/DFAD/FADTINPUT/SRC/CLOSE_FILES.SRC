	LOGICAL FUNCTION CLOSE_FILES()
C
***	MODULE CLOSE_FILES
***	IDENT 13JA88
C
C Copyright Laser-Scan Laboratories Ltd, Cambridge, England
C Author: J.M. Billing			13 Jan 1988
C
C Function to close any open files
C Returns .TRUE. if successful
C
	IMPLICIT NONE
C
	INCLUDE 'LSL$FADTINPUT:FADTINPUT.CMN'
C
C w/s variables
	INTEGER	OK
	INTEGER IERR
C
C functions
	INTEGER	FLWCLO
	INTEGER FLWPRT
C
C Assume success
C
	CLOSE_FILES = .TRUE.
C
C Show don't want any files
C
	WANT_FADT = .FALSE.
	WANT_RULE = .FALSE.
	WANT_LIST = .FALSE.
C
C Close FADT file
C
	IF (FADTOPN) THEN
	   FADTOPN = .FALSE.
	   CLOSE (UNIT = FADTLUN, IOSTAT = OK)
	   IF (OK.NE.0) THEN
	      CALL FORM_MSG('Unable to close FADT file',5)
	      CLOSE_FILES = .FALSE.
	   ENDIF
	ENDIF
C
C Close Rule file
C
	IF (RULEOPN) THEN
	   RULEOPN = .FALSE.
	   CLOSE (UNIT = RULELUN, IOSTAT = OK)
	   IF (OK.NE.0) THEN
	      CALL FORM_MSG('Unable to close rule file',5)
	      CLOSE_FILES = .FALSE.
	   ENDIF
	ENDIF
C
C Close list file
C
	IF (LISTOPN) THEN
	   LISTOPN = .FALSE.
	   IF (SPOOL) THEN
	      OK = FLWPRT (LISTLUN, IERR)
	   ELSE
	      OK = FLWCLO (LISTLUN, IERR)
	   ENDIF
	   IF (.NOT.OK) THEN
	      CALL LSL_PUTMSG(OK)
	      CALL LSL_ADDMSG(IERR)
	      CLOSE_FILES = .FALSE.
	   ENDIF
	ENDIF
C
C Exit
C
	RETURN
	END
