	SUBROUTINE HELP
C
***	IDENT	17FE87
***	MODULE	HELP
C
C	Copyright : Laser-Scan Laboratories, Cambridge, England
C
C	Author	  : Andrew Morris
C	Created   : Oct 1984
C
C MOD   don't add DTE at beginning		MWSR	17-Feb-1987
	IMPLICIT NONE
C
***	COMMON/LSL$CMNVIO:TXTC/
C
C workspace
	BYTE		CH
	INTEGER		I
	LOGICAL		EOLN
	CHARACTER*132	LINE
C
C functions
	LOGICAL		RDCH,RDCHS
C
	INTEGER		LIB$PUT_OUTPUT
	EXTERNAL	LIB$PUT_OUTPUT
C
C:::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::
C Uses system help facility to give user information on all available
C commands
C:::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::
	I=0
	LINE(1:1)=' '
10	EOLN = RDCHS(CH)
	IF (.NOT.EOLN) THEN
11	  I = I+1
	  LINE(I:I) = CHAR(CH)
	  EOLN = RDCH(CH)
	  IF (.NOT.EOLN) GOTO 11
	END IF
C
	CALL LBR$OUTPUT_HELP(LIB$PUT_OUTPUT,	! output_routine
     +                       ,			! output_width
     +                       LINE(1:MAX(I,1)),	! line_descr
     +                       'LSL$HELP:DTEHELP',	 ! library_name
     +                       0,			! flags
     +                       )			! input_routine
C
	IF (I.EQ.0) CALL WRITEF
	END
C
