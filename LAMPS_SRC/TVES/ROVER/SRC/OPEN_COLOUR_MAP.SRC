	SUBROUTINE OPEN_COLOUR_MAP
C
***	MODULE	OPEN_COLOUR_MAP
***	IDENT	21MR88
C
C Copyright Laser-Scan Laboratories Ltd., Cambridge, England
C
C Author M.W.S. Reid
C
C 	Created					MWSR    27-JAN-1988
C
C opens temporary colour file to speed up rover redisplay
C
	IMPLICIT NONE
C
C Parameters
C
C Common Blocks
	INCLUDE	'LSL$CMNROVER:ROVCMN.CMN'
C
C Functions
	INTEGER*4	DTI_CREATE
C
C Local Varaiables
	INTEGER*4	RET
	LOGICAL		ERR
C
	IF (.NOT. OPENED_COLFILE) THEN
	    RET = DTI_CREATE(COL_LUN,'LSL$DTI:ROVER.TMP',17,
     &	                     1,,1,1000,1000,ERR)
	    IF(.NOT. RET) THEN
	       CALL WRITEF('%S specifying ENABLE COLOUR_MAP',EBELL)
	       CALL LSL_PUTMSG(RET)
	       CALL LSL_ADDMSG(ERR)
	       COLOUR_MAP = .FALSE.
	    ELSE
	       COL_EXTENT(1) = 1
	       COL_EXTENT(2) = 1
	       COL_EXTENT(3) = 1
	       COL_EXTENT(4) = 1
	       OPENED_COLFILE = .TRUE.
	    ENDIF
	ENDIF	   
C
	RETURN
	END
