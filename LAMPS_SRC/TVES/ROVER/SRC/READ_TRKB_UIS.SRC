	SUBROUTINE READ_TRKB(X,Y)
C
***	MODULE	READ_TRKB
***	IDENT	29JA88
C
C Copyright Laser-Scan Laboratories Ltd., Cambridge, England
C
C Author M.W.S. Reid
C
C 	Created					MWSR    11-Dec-1987
C
C Hardware dependent routine  - GPX version for reading mouse position
C into (real) coords.
C
	IMPLICIT NONE
C
C arguments
	REAL*4	X,Y
C
C Common Blocks
	INCLUDE	'LSL$CMNROVER:MOUSE.CMN'
C
C Functions
	LOGICAL		HAD_MOUSE
C
C
	IF (HAD_MOUSE()) THEN
	   PRE_MOUSE_X = MOUSE_X
	   PRE_MOUSE_Y = MOUSE_Y
	   CALL GET_MOUSE_POSITION(X,Y)
	   MOUSE_X = X
	   MOUSE_Y = Y
	ENDIF
C
	RETURN
	END
