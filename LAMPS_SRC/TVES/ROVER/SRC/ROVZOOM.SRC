	SUBROUTINE ROVZOOM
C
***	MODULE	ROVZOOM
***	IDENT	22JN88
C
C Copyright Laser-Scan Laboratories Ltd., Cambridge, England
C
C Author M.W.S. Reid
C
C 	Created					MWSR    11-Jan-1988
C
C Deals with ROVER ZOOM command 
C
	IMPLICIT NONE
C
C Parameters
C
C Common Blocks
	INCLUDE	'LSL$CMNLSL:CMDCOM.CMN'
	INCLUDE	'LSL$CMNROVER:ROVCMN.CMN'
	INCLUDE	'LSL$CMNROVER:RASTED.CMN'
C
C
C Local Variables
	REAL		FACTOR
C
	IF (HAD_EDIT) THEN
	   CALL WRITEF('%S specifying command ZOOM',EBELL)
	   CALL WRITEF
     &	   ('Command not available during editing operation')
	   GOTO 999
	ENDIF
C 
	IF (CMDRCT .GT. 0) THEN
	   FACTOR = REALAR(1)
	ELSE
	   FACTOR  = 2.0
	ENDIF
C
	IF (FACTOR .LT. (0.0001)) THEN
	   CALL WRITEF('%S specifying command ZOOM',EBELL)
	   CALL WRITEF
     &	('Command requires a real argument greater than zero')
	   GOTO 999
	ENDIF	   
C
C do the moving
	CALL ZOOM(FACTOR)
	HADWIND = .TRUE.
C
999	RETURN
	END
