	SUBROUTINE ROVMESS
C
***	MODULE	ROVMESS
***	IDENT	21MR88
C
C Copyright Laser-Scan Laboratories Ltd., Cambridge, England
C
C Author M.W.S. Reid
C
C 	Created					MWSR    10-Mar-1988
C
C Outputs the supplied text to the terminal
C
	IMPLICIT NONE
C
C Parameters
	INCLUDE	'LSL$CMNLSL:READSTR.PAR'
C
C Common Blocks
	INCLUDE	'LSL$CMNROVER:ROVCMN.CMN'
C
C Functions
	INTEGER*4	READSTR
C
C Local Variables
	CHARACTER*255	STR
	INTEGER*4	LEN
	INTEGER*4	RET
C
C read the string
	LEN = READSTR(STR,,ON_EOL,.FALSE.,RET)
	IF (.NOT. RET) THEN
	   CALL WRITEF('%S specifying command MESSAGE',EBELL)
	   CALL LSL_PUTMSG(RET)
	ELSE
	   IF(LEN .GT. 0) THEN
	      CALL WRITEF('%S',STR(:LEN))
	   ENDIF
	ENDIF
	RETURN
	END
