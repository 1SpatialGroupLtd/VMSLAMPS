	SUBROUTINE SETUP_BALL_TIMER
C
***	MODULE	SETUP_BALL_TIMER
***	IDENT	20DE88
C
C Copyright Laser-Scan Laboratories Ltd., Cambridge, England
C
C Author M.W.S. Reid
C
C 	Created					MWSR    16-Dec-1988
C
C routine to setup a timer for the trackerball
C
	IMPLICIT NONE
C
C Parameters
C
C Arguments
C
C Common Blocks
	INCLUDE	'LSL$CMNROVER:RASTED.CMN'
	INCLUDE	'LSL$CMNROVER:TAB.CMN'
C
C Functions
	INTEGER*4	SYS$SETIMR
	INTEGER*4	SYS$CANTIM
	EXTERNAL	TIMER_AST
C
C Local Variables
	INTEGER*4	TIME(2)
	INTEGER*4	RET
C
C set up time
	TIME(2) = -1
	TIME(1) = -BALL_WAIT*10000	! ten millionths of secs
	MOVED_RECENTLY = .TRUE.
C
C cancel the timer
	RET = SYS$CANTIM(%VAL(EF_TIMER),)
	IF (.NOT. RET) THEN
	    CALL LSL_PUTMSG(RET)
	ENDIF
C
C
	RET = SYS$SETIMR(%VAL(EF_TIMER),	! event flag
     &  		 TIME,			! binary time
     &  		 TIMER_AST,		! AST routine
     &                   %VAL(EF_TIMER))	! id
	IF(.NOT. RET) THEN
	   CALL LSL_PUTMSG(RET)
	ENDIF	  
C
C	
	RETURN
	END
C
	SUBROUTINE TIMER_AST
C
***	MODULE	TIMER_AST
***	IDENT	20DE88
C
C Copyright Laser-Scan Laboratories Ltd., Cambridge, England
C
C Author M.W.S. Reid
C
C 	Created					MWSR    16-Dec-1988
C
C AST routine called when trackerball timer up
C
	IMPLICIT NONE
C
C Parameters
C
C Arguments
C
C Common Blocks
	INCLUDE	'LSL$CMNROVER:RASTED.CMN'
	INCLUDE	'LSL$CMNROVER:TAB.CMN'
C
C Functions
C
C Local Variables
	INTEGER*4	RET
C
	MOVED_RECENTLY = .FALSE.
C		
	RETURN
	END
