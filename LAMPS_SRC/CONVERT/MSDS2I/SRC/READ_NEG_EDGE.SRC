	LOGICAL FUNCTION READ_NEG_EDGE(SCAN,EDGE,EDGE_PTR,
     &	                     LINE_IDS,LINE_IDS_PTR)
C
***	IDENT	14FE90
***	MODULE	READ_NEG_EDGE
C
C Copyright (C) LaserScan Laboratories Ltd, Cambridge, England
C Author TJ Ibbs, 8 February 1988
C
C This routine reads in the negative half of an edge record
C It returns TRUE if all went well, and FALSE otherwise
C
	IMPLICIT NONE
C
C arguments
	LOGICAL		SCAN		! whether scanning or reading file
	INTEGER		EDGE(11,*)
	INTEGER		EDGE_PTR
	INTEGER		LINE_IDS(*)
	INTEGER		LINE_IDS_PTR
C
C Message files
C
	INCLUDE	'HERE:MSDS2IMSG.PAR'
C
C Common files
C
	INCLUDE	'HERE:COMMANDS.CMN'
	INCLUDE	'HERE:RECORD.CMN'
	INCLUDE	'HERE:STRUCTURES.PAR'
C
C Functions
C
	LOGICAL		READ_INTEGER	! read a comma-preceded integer
	LOGICAL		READ_POINTERS	! read relation pointers
C
C Workspace
C
	LOGICAL		OK		! function return
	INTEGER		TEMP
C
C *****************************************************************************
C read the negative edge entity ID
C
	OK = READ_INTEGER( TEMP, '-ve edge ID' )
	IF (.NOT.OK) GOTO 9000
	IF (.NOT.SCAN) EDGE(N$EDGE,EDGE_PTR) = TEMP
C
C and the pointer count and pointer list
C
	OK = READ_INTEGER( POINTER_COUNT, 'pointer count' )
	IF (.NOT.OK) GOTO 9000
	OK = READ_POINTERS(SCAN,'-ve edge ptrs',LINE_IDS,LINE_IDS_PTR,
     &				EDGE(S$LINE,EDGE_PTR),
     &				EDGE(E$LINE,EDGE_PTR),TEMP )
	IF (.NOT.OK) GOTO 9000
C
C read the right face ID
C
	OK = READ_INTEGER( TEMP, 'right face ID' )
	IF (.NOT.OK) GOTO 9000
	IF (.NOT.SCAN) EDGE(R$FACE,EDGE_PTR) = TEMP
C
C the next edge's ID
C
	OK = READ_INTEGER( NEXT_EDGE_NEG, 'next edge' )
	IF (.NOT.OK) GOTO 9000
C
C and the start node ID
C
	OK = READ_INTEGER( TEMP, 'start node' )
	IF (.NOT.OK) GOTO 9000
	IF (.NOT.SCAN) EDGE(S$NODE,EDGE_PTR) = TEMP
C
	IF (.NOT.SCAN.AND.DEBUG_LIST) THEN
	   CALL WRITEF('- negative edge')
	   CALL WRITEF(
     &		'	ID=%N, right face=%N, next edge=%N, end node=%N',
     &			EDGE(N$EDGE,EDGE_PTR), EDGE(R$FACE,EDGE_PTR),
     &			NEXT_EDGE_NEG, EDGE(S$NODE,EDGE_PTR) )
	ENDIF
C
9000	READ_NEG_EDGE = OK
	RETURN
	END
