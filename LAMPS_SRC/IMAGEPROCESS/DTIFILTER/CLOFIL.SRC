	SUBROUTINE CLOFIL
C
***	MODULE	CLOFIL
***	IDENT	16DE86
C
C Copyright Laser-Scan Laboratories Ltd., Cambridge, England
C
C Author M.W.S. Reid
C
C 	Created					MWSR    02-Dec-1985
C
C deals with the close command in DTIFILTER
C
	IMPLICIT NONE
C
C Parameters
***	COMMON/LSL$CMNDTI:DTILIBMSG.PAR/
***	COMMON/LSL$CMNDTIFILTER:DTIFILTERMSG.PAR/
C
C Common Blocks
***	COMMON/LSL$CMNDTI:DTIHDR/
***	COMMON/LSL$CMNDTIFILTER:DFILCMN/
***	COMMON/LSL$CMNLSL:CMDCOM/
C
C Functions
	INTEGER*4	DTI_CLOSE
	INTEGER*4	RDCOMM
	INTEGER*4	DTI_MINMAX_DATA
C
C command table
	EXTERNAL	CLO_CMD_TABLE
	INTEGER*4	CLO_CMD_TABLE
C
C Local Varaiables
	INTEGER*4	LUN
	INTEGER*4	ERR
	INTEGER*4	CMD
	INTEGER*4	RET
	LOGICAL		UPD		!update on closing
C
	CMD = RDCOMM(CLO_CMD_TABLE)
	IF (CMD .LE. 0) THEN
	   CALL LSL_PUTMSG(DTIFIL__BADCOMM)
	   GOTO 999
	ENDIF
	GOTO (10,20),CMD
C
C Close input DTI
C
10	IF (.NOT. DF_HADINP) THEN
	   CALL LSL_PUTMSG(DTIFIL__NOINPUT)
           GOTO 999
	ENDIF
	LUN= DF_INLUN
	UPD = .FALSE.
	GOTO 30
C
C Close output dti
C
20	IF (.NOT. DF_HADOUP) THEN
	    CALL LSL_PUTMSG(DTIFIL__NOOUTPUT)
	    GOTO 999
	ENDIF
	UPD = .TRUE.
	LUN = DF_OUTLUN
C
C
30	IF (UPD) THEN
	   RET = DTI_MINMAX_DATA(LUN,.TRUE.,ERR)
	   IF (.NOT. RET) THEN 
	      CALL LSL_PUTMSG(ERR)
	      GOTO 999
	   ENDIF
	ENDIF
C
	RET = DTI_CLOSE(LUN ,UPD ,.FALSE. ,ERR)	
	IF (.NOT. RET) THEN
	      IF (RET .EQ. DTI__SYSERR) THEN
	        CALL LSL_PUTMSG(ERR)
	      ELSE
		CALL LSL_PUTMSG(RET)
	      ENDIF
	      GOTO 999
	ENDIF
	IF (LUN .EQ. 1) THEN
	  CALL LSL_PUTMSG(DTIFIL__INFILCLO)
	  DF_HADINP = .FALSE.
	ENDIF
	IF (LUN .EQ. 2) THEN
	   CALL LSL_PUTMSG(DTIFIL__OUTFILCLO)
	   DF_HADOUP = .FALSE.
	ENDIF
C
999	RETURN
	END
