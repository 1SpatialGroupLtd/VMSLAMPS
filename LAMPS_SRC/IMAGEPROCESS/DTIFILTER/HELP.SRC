	SUBROUTINE HELP
C
***	IDENT	16DE86
***	MODULE	HELP
C
C	Copyright : Laser-Scan Laboratories, Cambridge, England
C
C	Author	  : Andrew Morris
C	Created   : Oct 1984
CMOD	LSLLIBified for ROVER				MWSR	Jul-1986
CMOD	DTIFILTER version				MWSR    Dec-1986
C
	IMPLICIT NONE
C
***	COMMON/LSL$CMNLSL:TXTC/
C
C workspace
	BYTE		CH
	INTEGER		I
	LOGICAL		EOLN
	CHARACTER*132	LINE
C
C functions
	LOGICAL		RDCH,RDCHS
C
	INTEGER		LIB$PUT_OUTPUT
	EXTERNAL	LIB$PUT_OUTPUT
C
C:::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::
C Uses system help facility to give user information on all available
C commands
C:::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::
	I=0
10	EOLN = RDCH(CH)
	IF (.NOT.EOLN) THEN
11	  I = I+1
	  LINE(I:I) = CHAR(CH)
	  EOLN = RDCHS(CH)
	  IF (.NOT.EOLN) GOTO 11
	ELSE
	  I =1
	  LINE(1:1) = ' '
	ENDIF
C
	CALL LBR$OUTPUT_HELP(LIB$PUT_OUTPUT,	! output_routine
     +                       ,			! output_width
     +                       LINE(1:I),		! line_descr
     +                       'LSL$HELP:DTIFILTER',	 ! library_name
     +                       0,			! flags
     +                       )			! input_routine
C
	IF(I.EQ.0)CALL WRITEF(' ')	
	RETURN
	END
