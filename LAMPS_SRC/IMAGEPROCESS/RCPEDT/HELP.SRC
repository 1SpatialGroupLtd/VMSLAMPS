	SUBROUTINE HELP
C
***	IDENT	18NO88
***	MODULE	HELP
C
C	Copyright : Laser-Scan Laboratories, Cambridge, England
C	Created   :					ACM	Oct-1984
C
	IMPLICIT NONE
C
C Workspace
	BYTE		CH
	INTEGER*4	I
	LOGICAL*4	EOL
	CHARACTER*132	LLINE
C
C Functions
	LOGICAL*4	RDCH
C
C Externals
	INTEGER*4	LIB$PUT_OUTPUT
	EXTERNAL	LIB$PUT_OUTPUT
C
CCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCC
C
C	Uses system help facility to give user information on all
C	available commands 
C
CCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCC
C
	I = 0
10	EOL = RDCH(CH)
	IF (.NOT.EOL) THEN
11	  I = I+1
	  LLINE(I:I) = CHAR(CH)
	  EOL = RDCH(CH)
	  IF (.NOT.EOL) GOTO 11
	ELSE
	  I = 1
	  LLINE(1:1) = ' '
	ENDIF
C
	CALL LBR$OUTPUT_HELP(LIB$PUT_OUTPUT,	! output_routine
     &                       ,			! output_width
     &                       LLINE(1:I),	! line_descr
     &                       'LSL$HELP:RCPEDT',	! library_name
     &                       0,			! flags
     &                       )			! input_routine
C
	IF (I.EQ.0) CALL WRITEF
	RETURN
	END
