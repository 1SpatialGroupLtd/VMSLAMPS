	SUBROUTINE IFFTXT
C
***	MODULE IFFTXT
***	IDENT  01NO88
C
C Copyright Laser Scan Laboratories Ltd., Cambridge, England
C Author: D Catlow
C
	IMPLICIT NONE
C
***	COMMON/LSL$CMNDTI:DTIHDR/
C
***	COMMON/LSL$CMNLSL:EXPC/
***	COMMON/LSL$CMNIFF:IFFHAN/
***	COMMON/HERE:DRCTRL/
***	COMMON/HERE:VIEW/
***	COMMON/HERE:DTICMN/
***	COMMON/HERE:CULTRE/
C
	INCLUDE '($JPIDEF)'
C
C Output details of model etc. as a text feature in IFF file
C
C locals:
	REAL		STBUF(2)
	INTEGER*4	IERR
	INTEGER*2	ISQ
	INTEGER*2	ISTAT(4)
	INTEGER*2	USELEN
	CHARACTER*20	USER
	CHARACTER*9	SDATE
	CHARACTER*8	STIME
	CHARACTER*5	COMPAS(4)	! 4 viewing points
C
	INTEGER*4	LIB$GETJPI
C preset:
	DATA		ISTAT/4*0/
	DATA		COMPAS/'west','south','east','north'/
C
C***************************************************************
C	Get date and time
	CALL DATE(SDATE)
	CALL EXPAND(' %S',SDATE)
	CALL TIME(STIME)
	CALL APPEND(' %S',STIME(1:5))
C	Get user name
	IERR=LIB$GETJPI(JPI$_USERNAME,,,,USER,USELEN)
	CALL APPEND(' %S',USER(1:USELEN))
C
C	Put DTI filename in EXPBUF
	CALL APPEND(' %S',DTI_NAME(1)(1:DTI_NAME_LENGTH(1)))
C	Add direction of view
	IF(PRSPVW)THEN
	  CALL APPEND(' Perspective view from the %S',COMPAS(DIRECT))
	ELSE
	  CALL APPEND(' Isometric view from the %S',COMPAS(DIRECT))
	ENDIF	  
C
C	Output to IFF file	
	ISQ=0
C	FTNUM = FTNUM+1
	CALL IFFSEL(1)
	LPOSNO = LPOSE
	CALL IFFNO(3,0,0)
	CALL IFFNF(FTNUM,ISQ)
	ISTAT(1)=TEXT_FC		!text feature
	CALL IFFFS(ISTAT)
	CALL IFFTH(12)
	CALL IFFRO(0.0)
	STBUF(1)=VWMINX
	STBUF(2)=VWMINY
	CALL IFFST(STBUF,1,0)
	CALL IFFTX(EXPBUF,EXPLEN)
	CALL IFFEF
	CALL IFFUNO(LPOSNO)
	CALL IFFEO
C
	RETURN
	END
