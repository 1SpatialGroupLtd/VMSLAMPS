	SUBROUTINE DRAW_FISHNET
C
***	MODULE DRAW_FISHNET
***	IDENT  24MY89
C
C	Copyright : Laser-Scan Laboratories, Cambridge, England.
C	Created   : 27 February 1988
C	Author    : D R Catlow
C
CMOD	Include control-C handler		IMcL	24-May-1989
C
C	Routine to produce a fishnet representation
C
	IMPLICIT NONE
C
***	COMMON/LSL$CMNDTI:DTIHDR/
C
***	COMMON/HERE:CULTRE/
***	COMMON/HERE:MODEL/
***	COMMON/HERE:VIEW/
***	COMMON/HERE:DTICMN/
***	COMMON/HERE:TRANS/
***	COMMON/HERE:DRCTRL/
C
	INTEGER*4	LINE		!scan line counter
	INTEGER*4	STEP		!loop increment
C
C Functions
C
	LOGICAL		HADCTRLC
C
C------------------------------------------------------------------------------
C
	GOTO (50,150,250,350)DIRECT
C
C	Viewing from the west
50	STEP=-Y_SAMPLE
        DO 100 LINE=DTI_WINDOW_NEY(1),DTI_WINDOW_SWY(1),STEP
C
C has CTRL/C been pressed
C
	   IF (HADCTRLC()) GOTO 999
	   STALIN=.TRUE.
	   PREV_INDEX=-1
	   CALL ENCODE_IFF(
     &          DTI_WINDOW_SWX(1),
     &          LINE,
     &          DTI_WINDOW_NEX(1),
     &          LINE,
     &          -1,
     &          2)
100	CONTINUE
C
	GOTO 999
C
C-------------------------------------------------------------------------
C
C	Viewing from the south
150	STEP=X_SAMPLE
        DO 200 LINE=DTI_WINDOW_SWX(1),DTI_WINDOW_NEX(1),STEP
C
C has CTRL/C been pressed
C
	   IF (HADCTRLC()) GOTO 999
	   STALIN=.TRUE.
	   PREV_INDEX=-1
	   CALL ENCODE_IFF(
     &          LINE,
     &          DTI_WINDOW_SWY(1),
     &          LINE,
     &          DTI_WINDOW_NEY(1),
     &          -1,
     &          1)
200	CONTINUE
C
	GOTO 999
C
C--------------------------------------------------------------------------
C	Viewing from the east
250	STEP=Y_SAMPLE
        DO 300 LINE=DTI_WINDOW_SWY(1),DTI_WINDOW_NEY(1),STEP
C
C has CTRL/C been pressed
C
	   IF (HADCTRLC()) GOTO 999
	   STALIN=.TRUE.
	   PREV_INDEX=-1
	   CALL ENCODE_IFF(
     &          DTI_WINDOW_NEX(1),
     &          LINE,
     &          DTI_WINDOW_SWX(1),
     &          LINE,
     &          -1,
     &          2)
300	CONTINUE
C
	GOTO 999
C
C-------------------------------------------------------------------------
C	Viewing from the north
350	STEP=-X_SAMPLE
        DO 400 LINE=DTI_WINDOW_NEX(1),DTI_WINDOW_SWX(1),STEP
C
C has CTRL/C been pressed
C
	   IF (HADCTRLC()) GOTO 999
	   STALIN=.TRUE.
	   PREV_INDEX=-1
	   CALL ENCODE_IFF(
     &          LINE,
     &          DTI_WINDOW_NEY(1),
     &          LINE,
     &          DTI_WINDOW_SWY(1),
     &          -1,
     &          1)
400	CONTINUE
C
C-------------------------------------------------------------------------
999	RETURN
	END
