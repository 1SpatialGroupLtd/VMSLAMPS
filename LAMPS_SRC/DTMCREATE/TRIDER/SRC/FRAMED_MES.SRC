	SUBROUTINE FRAMED_MES(IMES,VALUE)
C
***	MODULE	FRAMED_MES
***	IDENT	23NO87
C
C	Copyright Laser-Scan Laboratories Ltd., Cambridge, England
C
C	Author						TJH  23-Nov-1987
C
C 	Routine to output framed progress messages to the terminal.
C
	IMPLICIT NONE
C
C Arguments:
	INTEGER		IMES	! message number
	INTEGER		VALUE	! associated argument
C
C ......................................................................
C Output frame top
C
	CALL WRITEF
	CALL WRITEF(
     &		'+---------------------------------------------'//
     &		'-------------------+')
	CALL WRITEF(
     &		'|                                             '//
     &          '                   |')
C
C ......................................................................
C Output text
	GOTO (10,20,30,40,50), IMES
C
10	CALL WRITEF(
     &		'|		Starting derivative '//
     &		'calculation phase            |')
	GOTO 60
C
20	CALL WRITEF(
     &		'|       Imaginary point interpolation - '//
     &		'interpolation phase      |')
	GOTO 60
C
30	CALL WRITEF(
     &		'|     Imaginary point interpolation - '//
     &		'collect star neighbours    |')
	GOTO 60
C
40	CALL WRITEF(
     &		'|          Setting up memory/random file '//
     &		'for neighbours          |')
	GOTO 60
50	CALL WRITEF(
     &		'|	             Calculating slope '//
     &		'derivatives               |')
C	
C ......................................................................
C Output frame bottom
C
60	CALL WRITEF(
     &		'|                                             '//
     &          '                   |')
	CALL WRITEF(
     &		'+---------------------------------------------'//
     &		'-------------------+')
	CALL WRITEF
	CALL WRITEF
C
	RETURN
	END
