	SUBROUTINE SOLVE(A,T,MM,N,IERR)
C
***	MODULE	SOLVE
**	IDENT	30MY85
C
C	Copyright Laser-Scan Laboratories Ltd., Cambridge, England
C
C	Standardised/incorporated into LSL DTMCREATE  TJH  30-May-1985
C
C
C
C Solve a set of linear equations by pivotal condensation.
C not pretty but it works reasonable well and speedily.
C
C
	DIMENSION A(MM,MM),T(MM)
C
C ......................................................................
C
	IERR=0
	BB=10.0E-15
	C=10.0E6
	NB=N-1
	DO 70 I=1,NB
	   K=I
	   II=I+1
	   DO 10 J=II,N
	      IF(ABS(A(J,I)).GT.ABS(A(K,I)))K=J
10	   CONTINUE
	   AB=ABS(A(K,I))
	   IF(AB.LT.BB)GOTO 100
	   IF(AB.LE.C*ABS(A(I,I)))GOTO 30
	   DO 20 J=I,N
	      D=A(K,J)
	      A(K,J)=A(I,J)
	      A(I,J)=D
20	   CONTINUE
	   D=T(K)
	   T(K)=T(I)
	   T(I)=D
30	   IF(ABS(A(I,I)).LT.BB) GOTO 100
	   D=1.0/A(I,I)
	   DO 40 J=II,N
	      A(I,J)=A(I,J)*D
40	   CONTINUE
	   T(I)=T(I)*D
	   DO 60 J=II,N
	      D=A(J,I)
	      DO 50 K=II,N
	         A(J,K)=A(J,K)-D*A(I,K)
50	      CONTINUE
	      T(J)=T(J)-D*T(I)
60	   CONTINUE
70	CONTINUE
	IF(ABS(A(N,N)).LT.BB) GOTO 100
	T(N)=T(N)/A(N,N)
	I=N-1
80	II=I+1
	DO 90 J=II,N
	   T(I)=T(I)-T(J)*A(I,J)
90	CONTINUE
	I=I-1
	IF(I.NE.0)GOTO 80
	RETURN
C Oh, dear me, solution failure.
100	IERR=1
	RETURN
	END
