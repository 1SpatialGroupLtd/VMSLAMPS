	SUBROUTINE GINIT
C
***	MODULE	GINIT
***	IDENT	23NO84
C
C Copyright Laser-Scan Laboratories Limited, Cambridge, England.
C
C	TEK 41xx version			 DM	23-Nov-1984
C	Standardised 				 DM	02-Jul-1984
C
C ......................................................................
C
	CALL OUCH(27)			! ESC
	CALL OUCH(37)			! '%'
	CALL OUCH(33)			! '!'
	CALL OUCH(48)			! '0' ==> CODE TEK
	CALL OUCH(27)			! ESC
	CALL OUCH(12)			! FF
	CALL FLUSH
	CALL LSL_WAIT(1,2)
	CALL CSIZE(4)
	RETURN
	END
	SUBROUTINE FINIT
C
***	MODULE	FINIT
***	IDENT	23NO84
C
C Copyright Laser-Scan Laboratories Limited, Cambridge, England.
C
C	TEK 41xx version			 DM	23-Nov-1984
C	Standardised 				 DM	02-Jul-1984
C
C ......................................................................
C
	CALL OUTBUF
	CALL OUCH(31)			! US
	CALL OUCH(27)			! ESC
	CALL OUCH(12)			! FF
	CALL FLUSH
	CALL LSL_WAIT(1,2)
	CALL OUCH(27)			! ESC
	CALL OUCH(37)			! '%'
	CALL OUCH(33)			! '!'
	CALL OUCH(49)			! '1' ==> CODE ANSI
	CALL FLUSH
	RETURN
	END
