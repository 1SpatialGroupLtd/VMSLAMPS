	SUBROUTINE TGINIT
C
***	MODULE	TGINIT
***	IDENT	27MR92
C
C Copyright Laser-Scan Laboratories Limited, Cambridge, England.
C
CMOD	Converted for TRIEDIT			TJH	07-Dec-1987
CMOD	Code added to disable dialog area and set
C	up TEK for GIN interaction		TJH	29-Apr-1985
CMOD	TEK 41xx version of GINIT		 DM	03-Apr-1985
C	Standardised 				 DM	02-Jul-1984
C
C ......................................................................
C
	CALL OUCH(27)			! ESC
	CALL OUCH(37)			! '%'
	CALL OUCH(33)			! '!'
	CALL OUCH(48)			! '0' ==> CODE TEK
	CALL FLUSH
	CALL TERASE
	CALL FLUSH
C
C Now set up the Tek to enable GIN interaction to work
C
C NOENABLE: - Disable the dialog area (we will re-instate this on exit)
	CALL OUCH(27)			! ESC
	CALL OUCH(75)			! 'K'
	CALL OUCH(65)			! 'A'
	CALL OUCH(48)			! '0'
	CALL FLUSH
C
C BYPASSCANCEL:
	CALL OUCH(27)			! ESC
	CALL OUCH(78)			! 'N'
	CALL OUCH(85)			! 'U'
	CALL FLUSH
C
C EOLSTRING:
	CALL OUCH(27)			! ESC
	CALL OUCH(78)			! 'N'
	CALL OUCH(84)			! 'T'
	CALL FLUSH
C
C REOM 1:
	CALL OUCH(27)			! ESC
	CALL OUCH(73)			! 'I'
	CALL OUCH(77)			! 'M'
	CALL OUCH(49)			! '1'
	CALL FLUSH
C
C EOMCHARS:
	CALL OUCH(27)			! ESC
	CALL OUCH(78)			! 'N'
	CALL OUCH(67)			! 'C'
	CALL OUCH(48)			! '0'
	CALL OUCH(48)			! '0'
	CALL FLUSH
	RETURN
	END
C
	SUBROUTINE TFINIT
C
***	MODULE	TFINIT
***	IDENT	29AP85
C
C Copyright Laser-Scan Laboratories Limited, Cambridge, England.
C
CMOD	OUTBUF replaced by FLUSH		 DM	02-Apr-1985
CMOD	TEK 41xx version of FINIT		 DM	23-Nov-1984
C	Standardised 				 DM	02-Jul-1984
C
C ......................................................................
C
	CALL FINIT
C
C Re-ENABLE dialog area 
	CALL OUCH(27)			! ESC
	CALL OUCH(75)			! 'K'
	CALL OUCH(65)			! 'A'
	CALL OUCH(49)			! '1'
	CALL FLUSH
C
C Put default code back to ANSI
	CALL OUCH(27)			! ESC
	CALL OUCH(37)			! '%'
	CALL OUCH(33)			! '!'
	CALL OUCH(49)			! '1' ==> CODE ANSI
	CALL FLUSH
	RETURN
	END
C
	SUBROUTINE FINIT
C
***	MODULE	FINIT
***	IDENT	29AP85
C
C Copyright Laser-Scan Laboratories Limited, Cambridge, England.
C
CMOD	Special version for TRIEDIT		 DM	03-Apr-1985
C	Standardised 				 DM	02-Jul-1984
C
C ......................................................................
C
	CALL FLUSH
	CALL OUCH(31)				! US
	CALL OUCH(27)				! ESC
	CALL OUCH(12)				! FF
	CALL FLUSH
	CALL LSL_WAIT(1,2)
	RETURN
	END
